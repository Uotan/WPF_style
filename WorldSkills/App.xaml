<Application x:Class="WorldSkills.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WorldSkills"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ColorWin" Color="#FF303232"></SolidColorBrush>
        <SolidColorBrush x:Key="Att" Color="#FF33AE98"></SolidColorBrush>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Gray"></Setter>
            <Setter Property="FontFamily" Value="OCR A Extended"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
                    <Setter Property="Background" Value="{StaticResource Att}"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
